    name = "conftest",
    srcs = [
        "conftest.py",
        "ext_functions.py",
        "server.py",
        "test_dummy.py",
    ],
    imports = ["../.."],
    visibility = ["//:__subpackages__"],
    deps = [
        "@tavern_pip_flask//:pkg",
        "@tavern_pip_itsdangerous//:pkg",
